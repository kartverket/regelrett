<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <!-- Enhanced logging for different contexts -->
    <logger name="no.bekk.authentication" level="DEBUG"/>
    <logger name="no.bekk.plugins" level="DEBUG"/>
    <logger name="no.bekk.services" level="DEBUG"/>
    <logger name="no.bekk.routes" level="INFO"/>
    <logger name="no.bekk.exception" level="DEBUG"/>
    <logger name="no.bekk.util.ExternalServiceTimer" level="DEBUG"/>
</configuration>
