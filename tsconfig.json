{
    "include": [
        "app/**/*",
        "tailwind.config.ts",
        "vite.config.ts"
    ],
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2024"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "target": "ES2024",
        "module": "preserve",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "./app/*"
            ]
        },
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true
    }
}
